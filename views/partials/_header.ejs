<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse container" id="navbarNavAltMarkup">
      <div class="navbar-nav col-sm-8">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (typeof user !== 'undefined' && user) { %>
        <div class="navbar-nav col-sm-7">
          <div class="row align-items-end">
            <div class="col">
              <span>Logged in as: <%= user.email %>!</span>
            </div>
            <div class="col">
              <form action="/logout" method="post">
                <input type="submit" value="Logout" class="btn btn-primary"/>
              </form>
            </div>
          </div>
        </div>
      <% } else { %> 
        <div class="navbar-nav col-sm-7">
          <div class="row align-items-end">
            <div class="col">
              <a href="/register" class="btn btn-primary">Register</a>
            </div>
            <div class="col">
              <a href="/login" class="btn btn-primary">Login</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </nav>
</header>